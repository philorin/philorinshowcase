<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang="en" xml:lang="en" xmlns="http://www.w3.org/1999/xhtml">
    <head>
      <title><%= title %></title>
      <%= render 'layouts/stylesheets' %>
    </head>
  <!-- Overall Container -->
  <table style="width: 100%; height: 100%; border-spacing: 0;">
    <!-- Row 1 -->
    <tr id="logo-header" style="height: 50px; background-color: white;">
      <!-- Col 1 of Row 1 -->
      <td></td>
      <!-- Col 2 of Row 1 -->
      <td>
        <!-- Content of Row 1 -->
        <!-- Image Row -->
          <%= render 'layouts/headerimage' %>
      </td>
      <!-- Col 3 of Row 1 -->
      <td></td>
    </tr>
    
    <!-- Row 2 -->
    <tr>
      <!-- Col 1 of Row 2 -->
      <td></td>
      <!-- Col 2 of Row 2 -->
      <td>
        <!-- Menu Row -->
        <%= render 'layouts/header' %>
      </td>
      <!-- Col 3 of Row 2 -->
      <td></td>
    </tr>
  
    <!-- Row 3 -->
    <!-- Page Content Row -->
    <tr style="height: 300px;">
      <!-- Col 1 of Row 3 -->
      <td>&nbsp;</td>
      <!-- Col 2 of Row 3 -->
      <td>
        <!-- Content Section -->
        <%= yield %>
      </td>
      <!-- Col 3 of Row 3 -->
      <td>&nbsp;</td>
    </tr>
    <!-- Row 4 -->
    <!-- Footer Row -->
    <tr>
    <!-- Col 1 of Row 4 -->
    <td></td>
    <!-- Col 2 of Row 4 -->
    <td class="footer-menu" style="height: 15px; text-align: center; background-color: #3E4370">
      <!-- Content of Row 4 -->
      <%= render 'layouts/footer' %>
    </td>
    <!-- Col 3 of Row 4 -->
    <td></td>
    </tr>
  <!-- Close out Page -->
  </table>
</html>